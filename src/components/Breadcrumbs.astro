---
interface BreadcrumbItem {
  label: string
  href?: string
}

interface Props {
  items: BreadcrumbItem[]
}

const { items } = Astro.props
const siteUrl = 'https://www.musicwithpat.com'

const breadcrumbList = [
  { label: 'Home', href: '/' },
  ...items
]

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbList.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    ...(item.href ? { "item": siteUrl + item.href } : {})
  }))
}
---

<nav aria-label="Breadcrumb" class="px-6 md:px-12 py-3 bg-warm-50">
  <div class="max-w-6xl mx-auto">
    <ol class="flex items-center gap-2 text-sm text-base-500">
      {breadcrumbList.map((item, index) => (
        <li class="flex items-center gap-2">
          {index > 0 && <span class="text-base-300">/</span>}
          {item.href ? (
            <a href={item.href} class="hover:text-primary-600 transition-colors">{item.label}</a>
          ) : (
            <span class="text-base-700 font-medium">{item.label}</span>
          )}
        </li>
      ))}
    </ol>
  </div>
</nav>

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
