      <span class="text-[10px] mt-1 font-medium">Contact</span>
    </a>
  </div>
</nav>

<style>
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom, 0);
  }
</style>

<script>
  // Highlight active nav item based on scroll position
  const sections = ['#about', '#philosophy', '#faq', '#contact'];
  const navLinks = document.querySelectorAll('nav.fixed a');
  
  function updateActiveNav() {
    const scrollY = window.scrollY + 100;
    
    let activeIndex = 0;
    
    sections.forEach((selector, index) => {
      const section = document.querySelector(selector);
      if (section && scrollY >= (section as HTMLElement).offsetTop) {
        activeIndex = index + 1;
      }
    });
    
    navLinks.forEach((link, index) => {
      if (index === activeIndex) {
        link.classList.remove('text-base-400');
        link.classList.add('text-primary-600');
      } else {
        link.classList.remove('text-primary-600');
        link.classList.add('text-base-400');
      }
    });
  }
  
  window.addEventListener('scroll', updateActiveNav);
  updateActiveNav();
</script>
