---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Breadcrumbs from '../components/Breadcrumbs.astro'
import BottomNav from '../components/BottomNav.astro'
import WhatsAppButton from '../components/WhatsAppButton.astro'

const testimonials = [
  {
    text: "Pat has such a gentle way with children. My daughter looks forward to her lessons every week! She's made incredible progress in just 6 months.",
    name: "Sarah L.",
    initials: "SL",
    relation: "Mother of Emily, Age 7"
  },
  {
    text: "We tried other teachers before, but Pat's nurturing approach finally got my son excited about piano. He now practices without being asked!",
    name: "Michelle T.",
    initials: "MT",
    relation: "Mother of Ryan, Age 9"
  },
  {
    text: "Pat prepared my daughter for her ABRSM Grade 3 exam and she passed with distinction! Highly recommend for anyone looking for quality piano lessons.",
    name: "Jennifer C.",
    initials: "JC",
    relation: "Mother of Sophie, Age 11"
  }
]
---

<BaseLayout
  title="What Parents Say About Our Piano Lessons | Music with Pat"
  description="Read what parents say about Patricia's piano lessons for children in Singapore. Trusted by families for gentle, effective piano instruction."
>
  <Header currentPage="/testimonials/" />
  <Breadcrumbs items={[{ label: 'Testimonials' }]} />

  <main>
    <section class="py-12 md:py-24 px-6 md:px-12 bg-white">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-10">
          <p class="text-primary-600 font-medium mb-2">Parent Testimonials</p>
          <h1 class="text-2xl md:text-3xl lg:text-4xl font-serif font-semibold text-base-900 mb-3">
            What Parents Say About Our Piano Lessons
          </h1>
          <p class="text-base-600 max-w-xl mx-auto">
            Hear from parents whose children learn piano with Patricia.
          </p>
        </div>

        <div class="space-y-6">
          {testimonials.map(testimonial => (
            <div class="bg-primary-50 rounded-2xl p-6 md:p-8 border border-primary-100">
              <div class="text-2xl mb-3">⭐⭐⭐⭐⭐</div>
              <p class="text-base-700 text-lg italic mb-6">
                "{testimonial.text}"
              </p>
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-primary-200 rounded-full flex items-center justify-center text-primary-700 font-semibold">
                  {testimonial.initials}
                </div>
                <div>
                  <p class="font-medium text-base-900">{testimonial.name}</p>
                  <p class="text-sm text-base-500">{testimonial.relation}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-12 md:py-16 px-6 md:px-12 bg-primary-50">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-serif font-semibold text-base-900 mb-3">
          Join Our Happy Families
        </h2>
        <p class="text-base-600 mb-6">Book a consultation and see why parents trust Patricia with their children's musical education.</p>
        <a href="/contact/" class="inline-block px-8 py-4 bg-primary-600 text-white font-medium rounded-full hover:bg-primary-700 transition-colors">
          Book a Consultation
        </a>
      </div>
    </section>
  </main>

  <Footer />
  <BottomNav />
  <WhatsAppButton />
</BaseLayout>
