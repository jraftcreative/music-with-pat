---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
}

const {
  title = 'Music with Pat | Piano Lessons for Children in Tengah, Singapore',
  description = 'Nurturing piano lessons for children ages 4+ in Tengah, Singapore. Home-based studio near Jurong West, Bukit Batok, Bukit Timah & Choa Chu Kang. 10+ years experience. ABRSM preparation.'
} = Astro.props

const siteUrl = 'https://www.musicwithpat.com'
const canonicalUrl = siteUrl + Astro.url.pathname
const ogImage = `${siteUrl}/og-image.jpg`
---

<!DOCTYPE html>
<html lang="en-SG" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Geo Tags for Local SEO -->
    <meta name="geo.region" content="SG" />
    <meta name="geo.placename" content="Tengah, Singapore" />
    <meta name="geo.position" content="1.3644;103.7420" />
    <meta name="ICBM" content="1.3644, 103.7420" />
    <meta name="robots" content="index, follow" />
    <meta name="google-site-verification" content="htmgFONZej3y36vUZivIC5NEXnQWBq-E8Qq0FSvo9Ws" />
    <link rel="alternate" hreflang="en-sg" href={canonicalUrl} />
    <link rel="alternate" hreflang="x-default" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Music with Pat - Piano Lessons for Children in Singapore" />
    <meta property="og:locale" content="en_SG" />
    <meta property="og:site_name" content="Music with Pat" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="Music with Pat - Piano Lessons for Children in Singapore" />

    <!-- Google Analytics (GA4) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TRM5H8W923"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-TRM5H8W923');
    </script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Favicon -->
    <link rel="icon" href="/music-with-pat-logo.png" type="image/png" />
    <link rel="apple-touch-icon" href="/music-with-pat-logo.png" />

    <title>{title}</title>

    <!-- LocalBusiness Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": ["LocalBusiness", "EducationalOrganization"],
      "@id": "https://www.musicwithpat.com/#business",
      "name": "Music with Pat",
      "description": "Nurturing piano lessons for children ages 4+ in Tengah, Singapore. Home-based studio serving Jurong West, Bukit Batok, Bukit Timah, Choa Chu Kang and surrounding areas.",
      "url": "https://www.musicwithpat.com/",
      "image": "https://www.musicwithpat.com/og-image.jpg",
      "telephone": "+65 8389 8853",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Tengah",
        "addressRegion": "Singapore",
        "addressCountry": "SG"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 1.3644,
        "longitude": 103.7420
      },
      "priceRange": "$$",
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
        "opens": "09:00",
        "closes": "18:00"
      }
    }
    </script>

    <!-- Service Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "serviceType": "Piano Lessons",
      "provider": {
        "@type": "LocalBusiness",
        "name": "Music with Pat"
      },
      "areaServed": [
        {
          "@type": "City",
          "name": "Singapore"
        },
        {
          "@type": "Place",
          "name": "Tengah"
        },
        {
          "@type": "Place",
          "name": "Jurong West"
        },
        {
          "@type": "Place",
          "name": "Bukit Batok"
        },
        {
          "@type": "Place",
          "name": "Bukit Timah"
        },
        {
          "@type": "Place",
          "name": "Choa Chu Kang"
        }
      ],
      "audience": {
        "@type": "PeopleAudience",
        "suggestedMinAge": 4
      },
      "description": "Piano lessons for children ages 4 and up. ABRSM syllabus preparation available. Home-based studio environment."
    }
    </script>

    <slot name="head" />
  </head>
  <body class="bg-warm-50 text-base-800 min-h-screen antialiased">
    <slot />
  </body>
</html>
